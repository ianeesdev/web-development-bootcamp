<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="user-panel-profile.css">
    <link rel="icon" href="/other-images/logo.png" type="image/icon type">
    <title>Profile</title>
</head>

<body>
    <div class="container">
        <aside>
            <div class="top">
                <!-- Logo + name -->
                <div class="logo">
                    <img src="/other-images/logo.png" alt="">
                    <h2>AE<span style="color: #df1e24;">Flix</span></h2>
                </div>
            </div>

            <div class="sidebar">
                <!-- Profile -->
                <a href="" class="active"><span class="material-icons">person</span>
                    <h3>Your Profile</h3>
                </a>

                <!-- Subscriptions -->
                <a href="user-panel-subscriptions"><span class="material-icons">subscriptions</span>
                    <h3>Subscriptions</h3>
                </a>

                <!-- Search Videos -->
                <a href="user-panel-search"><span class="material-icons">search</span>
                    <h3>Search Videos</h3>
                </a>

                <!-- Request Videos -->
                <a href="user-panel-request"><span class="material-icons">mail</span>
                    <h3>Request Videos</h3>
                </a>

                <!-- Playlist -->
                <a href="user-panel-list"><span class="material-icons">playlist_play</span>
                    <h3>Your Lists</h3>
                </a>

                <!-- Others-->
                <a href="user-panel-others"><span class="material-icons">contact_support</span>
                    <h3>Others</h3>
                </a>

                <!-- Log Out -->
                <a href="landing-page"><span class="material-icons">logout</span>
                </a>
            </div>
        </aside>

        <!-- --------------------- END OF ASIDE ---------------------------- -->
        <main>
            <h1>Profile Information</h1>

            <div class="profile-info">
                <div class="profile-pic">
                    <h3>Profile Picture</h3>
                    <div id="profile-container">
                        <img src="/other-images/profile-pic.png" alt="">
                    </div>
                    <div class="pic-btn">
                        <div class="change-btn">
                            <a href="#change-pic"><span>Change Picture</span></a>
                        </div>
                        <div class="remove-btn">
                            <a href="#remove-pic"><span>Remove Picture</span></a>
                        </div>
                    </div>
                </div>

                <!-- Change picture -->
                <div class="popup" id="change-pic">
                    <div class="wrapper">
                        <h2>CHANGING PICTURE</h2>
                        <a class="close" href="#">&times;</a>
                        <div class="content">
                            <div class="content-container">
                                <form>
                                    <div class="new-profile">
                                        <label>Your Profile Picture</label>
                                        <div id="display-image"></div>
                                        <input type="file" id="image-input" accept="image/jpeg, image/png, image/jpg">
                                    </div>
                                    <input type="submit" value="Save Changes">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Confirmation popup  -->
                <div class="popup" id="remove-pic">
                    <div class="wrapper">
                        <h2>REMOVING PROFILE PICTURE</h2>
                        <div class="content">
                            <div class="content-container">
                                <span>Are you sure you want to remove your profile picture?</span>
                                <div class="confirmation">
                                    <a href="" id="yes">Yes</a>
                                    <a href="" id="no">No</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="general-info">
                    <h3>General Information</h3>
                    <table>
                        <tr>
                            <td>Name</td>
                            <td><%= data[1] %></td>
                        </tr>
                        <tr>
                            <td>Password</td>
                            <td><%= data[2] %></td>
                        </tr>
                        <tr>
                            <td>Email Address</td>
                            <td><%= data[3] %></td>
                        </tr>
                        <tr>
                            <td>Contact</td>
                            <td><%= data[4] %></td>
                        </tr>
                        <tr>
                            <td>Gender</td>
                            <td><%= data[5] %></td>
                        </tr>
                        <tr>
                            <td>Date of Birth</td>
                            <td><%= data[6].toDateString() %></td>
                        </tr>
                    </table>
                    <div class="profile-btn">
                        <a href="#update-profile"><span>Update Information</span></a>
                    </div>

                    <!-- Pop up to update info  -->
                    <div class="popup" id="update-profile">
                        <div class="wrapper">
                            <h2>UPDATING PROFILE</h2>
                            <a class="close" href="#">&times;</a>
                            <div class="content">
                                <div class="content-container">
                                    <form action="#" method="post">
                                        <div class="name">
                                            <label>Full Name</label>

                                            <!-- Current Name will be fetched and placed here -->
                                            <input name="updName" value="<%= data[1] %>" type="text">
                                        </div>

                                        <div class="password">
                                            <label>Password</label>

                                            <!-- Current Name will be fetched and placed here -->
                                            <input name="updPass" value="<%= data[2] %>" type="text">
                                        </div>

                                        <div class="email">
                                            <label>Email</label>

                                            <!-- Current Name will be fetched and placed here -->
                                            <input name="updEmail" value="<%= data[3] %>" type="text">
                                        </div>

                                        <div class="contact">
                                            <label>Contact</label>

                                            <!-- Current Name will be fetched and placed here -->
                                            <input name="updContact" value="<%= data[4] %>" type="text">
                                        </div>

                                        <div class="gender">
                                            <label>Gender</label> 
                                            <select name="updPicker" id="gender-spec">
                                                <option value="" selected>Select gender</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                        </div>
                                        <input type="submit" value="Save Changes">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!------------------------END OF INSIGHTS ------------------------>
        </main>
    </div>
    <!------------------------------ END OF MAIN ------------------------->
    </div>
    <script src="admin-panel-profile.js">
    </script>
</body>

</html>